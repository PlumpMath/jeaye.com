#!/usr/bin/env bash

set -eu

if [ ! -d ./node_modules/sprity-cli ];
then
  npm install sprity-cli
fi

node ./node_modules/sprity-cli/index.js \
    create ./img img-partial/*.png \
    -s sprite-sheet.css \
    -c /img \
    -n sprite-sheet
mv -f ./img/sprite-sheet.png ./img/sprite-sheet.png
mv -f ./img/sprite-sheet.css ./css-partial/sprite-sheet.scss
